{
  "name": "@firesync/server",
  "version": "0.0.1-alpha.5",
  "description": "An open source platform for building real-time collaboration apps",
  "author": "FireSync",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "watch": "npm run clean && tsc --project tsconfig.build.json --watch",
    "start": "nodemon -L --watch src --ext 'ts' --exec './bin/firesync-server-dev server' | npx bunyan",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest --verbose --runInBand",
    "openapi:generate": "npx ts-node scripts/generate-openapi-docs.ts > openapi.json",
    "docs:generate": "npx jsdoc-to-mdx -o ../docs/docs/reference/firesync-server -j jsdoc.json"
  },
  "bin": {
    "firesync-server": "./bin/firesync-server"
  },
  "files": [
    "/bin",
    "/dist",
    "/views"
  ],
  "oclif": {
    "bin": "firesync-server",
    "dirname": "firesync-server",
    "commands": "./dist/cli/commands",
    "hooks": {
      "postrun": "./dist/cli/hooks/postrun/cleanupDb"
    },
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "devDependencies": {
    "@daybrush/jsdoc": "^0.4.7",
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.7.23",
    "@types/node-fetch": "^2.6.2",
    "@types/pg-pool": "^2.0.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.52.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.35.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.4.3",
    "jsdoc-to-mdx": "^1.2.0",
    "node-fetch": "^2.6.9",
    "node-fetch-cookies": "^2.0.4",
    "nodemon": "^2.0.20",
    "prettier-config-standard": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "@honeycombio/opentelemetry-node": "^0.3.2",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.3.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.4",
    "@opentelemetry/instrumentation-bunyan": "^0.31.1",
    "@opentelemetry/instrumentation-express": "^0.32.1",
    "@opentelemetry/instrumentation-http": "^0.36.1",
    "@opentelemetry/instrumentation-knex": "^0.31.1",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "lib0": "^0.2.63",
    "opentelemetry-instrumentation-ws": "^0.4.2",
    "pg": "^8.9.0",
    "pg-listen": "^1.7.0",
    "rimraf": "^4.1.2",
    "ws": "^8.12.0",
    "yjs": "^13.5.45"
  }
}
